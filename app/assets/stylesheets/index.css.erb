body.index {
    background-image: url("<%= asset_path('business_icon_access.png') %>");

    background-size: 100%;
}

body .button-1 {
    position: relative;
    top: 30%;
    text-align: center;
    margin: 10%;
}

.button-1 button {
    width: 50%;
    padding: 10px 30px;
    font-size: 30px;
    font-weight: bold;
    background-color: #008000;
    color: #ffffdd;
    border-style: none;
    box-shadow: 2px 2px 3px 1px #666;
    -moz-box-shadow: 2px 2px 3px 1px #666;
    -webkit-box-shadow: 2px 2px 3px 1px #666;
    text-shadow: 1px 1px 2px #000;
    border-radius: 5px;
}

.button-1 button:hover {
    background-color: #ff3333;
    color: #fff;

}

.wrapper {
    background-image: url("<%= asset_path('business_icon_access.png') %>");
    background-size: 1px auto;
    opacity: 0.8;
    min-height: 100vh;
    position: relative; /*←相対位置*/
}

